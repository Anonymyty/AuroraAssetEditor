<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="AuroraAssetEditor.IconBannerControl"
    x:Name="UserControl" AllowDrop="True" PreviewDragEnter="OnDragEnter" Drop="OnDrop">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="WhiteSmoke">
        <Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<GroupBox Grid.Row="0" Header="Icon Preview" Width="84" Height="84" Margin="10" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top">
        		<Image x:Name="PreviewIcon" HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="64" />
			</GroupBox>
        	<GroupBox Grid.Row="1" Header="Banner Preview" Width="440" Height="136" Margin="10" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top">
        		<Image x:Name="PreviewBanner" HorizontalAlignment="Left" Height="96" VerticalAlignment="Top" Width="420" />
			</GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>